    "standup" {
        if ($RemainingArgs.Count -lt 1) {
            Write-Host "Error: Standup notes required."
            Show-Usage
            exit 1
        }
        
        $notes = $RemainingArgs -join " "
        Process-Standup -Notes $notes
    }
    
    "metrics" {
        Interactive-Metrics
    }
    
    "help" {
        Show-Usage
    }
    
    default {
        Write-Host "Error: Unknown action '$Action'"
        Show-Usage
        exit 1
    }
}
