        node_id = UUID(node_id) if isinstance(node_id, str) else node_id
        
        if node_id not in self._nodes:
            raise ValueError(f"Node {node_id} not found")
            
        node = self._nodes[node_id]
        
        # Remove from index
        for key, value in node.properties.items():
