                        "read_stddev": statistics.stdev(all_read_latencies) if len(all_read_latencies) > 1 else 0
                    }
                else:
                    read_latency_metrics = {
                        "read_min": 0, "read_max": 0, "read_avg": 0, "read_median": 0,
