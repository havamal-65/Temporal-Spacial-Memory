                # Adjust layout
                plt.tight_layout()
                
                # Save to file
                chart_path = os.path.join(output_dir, f"relative_{timestamp}_chart.png")
                plt.savefig(chart_path)
                plt.close()
                
                chart_paths.append(chart_path)
            
